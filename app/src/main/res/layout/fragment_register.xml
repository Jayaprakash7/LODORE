
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="75dp">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                tools:context="lodore.com.lodore.Fragment.RegisterFragment">

                <EditText
                    android:id="@+id/registration_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_backround_home"
                    android:drawablePadding="20dp"
                    android:drawableRight="@drawable/msg_icon"
                    android:hint="@string/email"
                    android:padding="20dp" />

                <EditText

                    android:id="@+id/registration_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_backround_home"
                    android:drawablePadding="20dp"
                    android:drawableRight="@drawable/lock_icon"
                    android:hint="@string/password"
                    android:padding="20dp" />

                <EditText

                    android:id="@+id/registration_confirmpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_backround_home"
                    android:drawablePadding="20dp"
                    android:drawableRight="@drawable/lock_icon"
                    android:hint="@string/confirm_pass"
                    android:padding="20dp" />

                <EditText
                    android:id="@+id/registration_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_backround_home"
                    android:drawablePadding="20dp"
                    android:drawableRight="@drawable/ic_person_black_24px"
                    android:hint="@string/full_name"
                    android:padding="20dp" />

                <EditText
                    android:id="@+id/registration_phone_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_backround_home"
                    android:drawablePadding="20dp"
                    android:drawableRight="@drawable/phone_icon"
                    android:hint="@string/phone_1"
                    android:padding="20dp" />

                <EditText
                    android:id="@+id/registration_phone_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_backround_home"
                    android:drawablePadding="20dp"
                    android:drawableRight="@drawable/phone_icon"
                    android:hint="@string/phone_2"
                    android:padding="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"
                        android:gravity="center_vertical"
                        android:text="@string/terms_condition" />

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"

                        />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:background="@drawable/btn_cart_background"
            android:text="Login"
            android:textColor="@color/white" />

    </RelativeLayout>
